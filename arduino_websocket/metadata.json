{
  "id": "arduino_websocket",
  "name": "Arduino MQTT",
  "description": "Sensore Arduino con comunicazione MQTT",
  "protocol": "mqtt",
  "version": "1.0.0",
  "template_id": "arduino_websocket",
  "required_fields": ["name", "device_id"],
  "optional_fields": [],
  "mqtt_topic_status": "arduino/{device_id}/status/#",
  "mqtt_topic_command": "arduino/{device_id}/command",
  "default_config": {
    "protocol": "mqtt",
    "enabled": true,
    "type": "mqtt",
    "poll_interval": null,
    "mqtt_topic_status": "arduino/{device_id}/status/#",
    "mqtt_topic_command": "arduino/{device_id}/command"
  },
  "mqtt_topics": {
    "status": "arduino/{device_id}/status",
    "data": "arduino/{device_id}/data",
    "sensor": "arduino/{device_id}/sensor/#",
    "command": "arduino/{device_id}/command"
  },
  "component": "ArduinoWebSocketControl"
}
